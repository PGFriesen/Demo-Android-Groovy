<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <gradient
                android:angle="0"
                android:endColor="@color/dt_violet_darker"
                android:centerColor="@color/dt_violet"
                android:startColor="@color/dt_violet_darker" />

            <padding
                android:bottom="2dp"
                android:left="4dp"
                android:right="4dp"
                android:top="2dp" />

            <corners android:radius="4dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape
            android:shape="rectangle">

            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="2dp"
                android:color="@color/dt_violet" />

            <padding
                android:bottom="2dp"
                android:left="4dp"
                android:right="4dp"
                android:top="2dp" />

            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">

            <gradient
                android:angle="0"
                android:endColor="@color/dt_violet"
                android:centerColor="@color/dt_violet_darker"
                android:startColor="@color/dt_violet" />

            <padding
                android:bottom="2dp"
                android:left="4dp"
                android:right="4dp"
                android:top="2dp" />

            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>