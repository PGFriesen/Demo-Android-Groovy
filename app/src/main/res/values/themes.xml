        <item name="layoutRow">@style/layout_row</item>
    </style>

    <style name="Theme.Dynatrace.Light.Uem" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="backgroundActivityPrimary">@style/background_white_gray</item>
        <item name="backgroundCard">@style/card_view</item>
        <item name="buttonDefault">@style/button_violet</item>
        <item name="buttonPicker">@style/button_white</item>
        <item name="buttonTooltip">@style/button_tooltip</item>
        <item name="textLarge">@style/text_large</item>
        <item name="textSmall">@style/text_small</item>
